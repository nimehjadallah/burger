<div class="container">
    <div class="row text-center">
        <div class="col-12">
            <h1 class="text mt-4">Eat Da Burger! YUMMM</h1>
            <br>
            <img src="/assets/img/burger.jpg" alt="burgers"/>

            <h3 class="text pt-4">Yummy Burgers!</h3>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-6">
            <h3 class="text"></h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                    <p class="notEaten">
                        {{this.id}} {{this.burger_name}}
                        {{!-- noweaten connects to the burger_javascript.js when button clicked and created ajax to change devoured to true --}}
                        <button class="ml-2" id="devbtn" data-id="{{id}}"> 
                            Devour Me!</button>
                    </p>
                    {{/unless}}
                {{/each}}
            </ul>
            
        </div>

        <div class="col-6">
            <h3 class="text">Eaten:</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <p class="eaten">
                {{this.id}} {{this.burger_name}}
                </p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-12">
            <h3 class="text pt-4">Add a new burger to Eat</h3>
            <form class="create-form">
            
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <textarea class="form-control" id="burgerName" rows="2"></textarea> 
                </div>
            
                <button id="burgerSubmit" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>